some_tuple = tuple(range(7, 16))
print ('Кортеж: ' + str(some_tuple)) 

#2 Задание
print ('Задание 2')
some_list = list()
name_list = list(some_tuple)
for i in range(len(name_list)):
    if name_list[i] % 2 == 0:
        some_list.append(name_list[i] * 3)
    else:
        some_list.append(name_list[i] - 3) 
print('Список: ' +str(some_list))           

#3 задание 
print ('Задание 3')
