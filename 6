#5 задание
print('Задание 5 ')
def F(start, stop, step):
    L = []
    n = start
    if (start <= stop) and (step >= 0):
        while (n <= stop):
            L.append(n)
            n += step
    elif (start >= stop) and (step <= 0):
        while (n >= stop):
            L.append(n)
            n += step
    else:
        return []

    list6 = list(filter(lambda x: x%6==0, L))
    r = len(list6) - min(L)**3

    if (r < 0):
        return L[::-1]
    else:
        return [r] + L

print(F(3, 5, 1))
    
#6 задание
print(' Задание 6 ')
from random import randint, choice

string = ""
for _ in range(randint(3, 10)):
    alphabet = "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
    string += "".join([choice(alphabet) for __ in range(randint(4, 9))])
    string += " "

def F(s):
    words = s.split()
    result = list(filter(G, words))
    result.sort(reverse=True)
    return result

def G(word):
    a = word[0]
    return a == a.lower()

print(string)
print(F(string))

